<p id="notice"><%= notice %></p>

<h1>Count Words</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text to count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @count_words.each do |count_word| %>
      <tr>
        <td><%= count_word.title %></td>
        <td><%= count_word.text_to_count %></td>
        <td><%= link_to 'Show', count_word %></td>
        <td><%= link_to 'Edit', edit_count_word_path(count_word) %></td>
        <td><%= link_to 'Destroy', count_word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Count Word', new_count_word_path %>
